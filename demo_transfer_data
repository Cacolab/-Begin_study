                        <div>Bit 4</div>
                        <div>Bit 3</div>
                        <div>Bit 2</div>
                        <div>Bit 1</div>
                        <div>Bit 0</div>
                    </div>
                    <div class="connection">
                        <div class="wire"><div class="data-bit" id="parallelBit7"></div></div>
                        <div class="wire"><div class="data-bit" id="parallelBit6"></div></div>
